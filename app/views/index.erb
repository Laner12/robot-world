<h1>Robot Directory</h1>
<a href="/" class="btn btn-primary">Robot World Homepage</a><br><br>
<div id="robot_list">
<% @robots.each do |robot| %>
<a href="/robots/<%= robot.id %>">
<img src="https://robohash.org/<%= robot.name %>" alt="Picture of a robot"/>
</a>
<h3>: <a href="/robots/<%= robot.id %>"><%= robot.name %></a></h3>
<a id="<%= robot.name %>" class="btn btn-default" href="/robots/<%= robot.id %>/edit">Edit</a>

<form action="/robots/<%= robot.id %>" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <input id="delete" class="btn btn-danger"type="submit" value="Delete">
</form>
<% end %>
</div>
